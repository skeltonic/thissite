<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - This Site Sucks</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/sandstone.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Titan+One" rel="stylesheet">
</head>
<body>
    <nav class="navbar stick-top navbar-expand-lg navbar-light bg-light">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><div id="twlogo">This Site Sucks</div></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item add-padd homelink">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item add-padd shoplink">
                    <a class="nav-link" asp-controller="Product" asp-action="Index">Shop</a>
                </li>
                <li class="nav-item add-padd aboutlink">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                </li>
                <li class="nav-item add-padd contactlink">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                </li>

                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item add-padd accountlink">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a>
                    </li>
                    <li class="nav-item add-padd accountlink">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="SignIn">Sign In</a>
                    </li>
                }
                else
                {
                    <li class="nav-item add-padd accountlink">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="SignOut">Sign Out as @User.Identity.Name</a>
                    </li>
                }
                <li class="nav-item add-padd cartlink">
                    <a class="nav-link add-padd" asp-area="" asp-controller="Cart" asp-action="Index">Cart <span id="cartBadge" class="badge badge-primary add-padd">0</span></a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - This Site Sucks</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("scripts", required: false)

</body>
</html>