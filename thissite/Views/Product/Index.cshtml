@model IEnumerable<Product>;

@{
    ViewData["Title"] = "Buy Things. Attain Actualization.";
}
<div class="results titantext add-padd borders">
    <h2 class="header">Showing @Model.Count() Products</h2>
</div>

<div class="parentproductcontainer">
    @foreach (var product in Model)
    {
        <div class="productcontainer borders">
            <div class="productimagecontainer">
                <img class="productimage borders" src="@product.Image" alt="@product.Name" />
            </div>
            <div class="productbody">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Description</p>
            </div>
            <div class="productfooter">
                <h4 class="productfooterprice">@(product.Price.HasValue ? @product.Price.Value.ToString("C") : "No Price")</h4>
                <div class="productfooterbuttons">
                    <div>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="Details" asp-route-id="@product.ID"> View This Product </a>
                    </div>
                    <div>
                        <form method="post" asp-action="Details">
                            <input name="ID" value="@product.ID" type="hidden" />
                            <input type="submit" class="btn btn-primary" value="Add to Cart" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


